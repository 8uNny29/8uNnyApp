<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>HISS TKJ - Admin Panel</title>
    <link href="/assets/css/gaya.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css"
      rel="stylesheet"
    />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="sb-nav-fixed">
    <%- include('../../partials/navbar') %>
    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid px-4">
          <!-- Header Section -->
          <div class="d-flex justify-content-between align-items-center my-4">
            <h1 class="mt-4">Data Keuangan (<%= tahun %>)</h1>
          </div>

          <!-- Breadcrumb -->
          <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin">Panel</a></li>
            <li class="breadcrumb-item">
              <a href="/admin/data-keuangan">Data Keuangan</a>
            </li>
            <li class="breadcrumb-item active"><%= tahun %></li>
          </ol>

          <!-- Alert Messages -->
          <% if (message) { %>
          <div
            class="alert alert-info alert-dismissible fade show"
            role="alert"
          >
            <%= message %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>

          <!-- Data Keuangan Card -->
          <div class="card shadow mb-4">
            <div
              class="card-header bg-dark text-white d-flex justify-content-between align-items-center"
            >
              <h5 class="mb-0">
                <i class="fas fa-table me-1"></i> Data Keuangan (<%= tahun %>)
              </h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table
                  id="datatablesSimple"
                  class="table table-bordered table-hover"
                >
                  <thead class="table-dark">
                    <tr>
                      <th>Jenis Transaksi</th>
                      <th>Nominal</th>
                      <th>Keterangan</th>
                      <th>Tanggal</th>
                      <th>Aksi</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (detail && detail.length > 0) { %> <%
                    detail.forEach((data) => { %>
                    <tr>
                      <td><%= data.jenis_transaksi %></td>
                      <td>Rp <%= data.nominal.toLocaleString("id-ID") %></td>
                      <td><%= data.keterangan %></td>
                      <td><%= data.tanggal %></td>
                      <td>
                        <!-- Tombol Edit -->
                        <button
                          class="btn btn-warning btn-sm"
                          data-bs-toggle="modal"
                          data-bs-target="#editModal<%= data.id %>"
                        >
                          <i class="fas fa-edit"></i> Edit
                        </button>

                        <!-- Tombol Hapus -->
                        <button
                          class="btn btn-danger btn-sm"
                          data-bs-toggle="modal"
                          data-bs-target="#confirmModal"
                          onclick="setConfirmModal('/admin/data-keuangan/hapus/<%= data.id %>', 'Yakin ingin menghapus data ini?')"
                        >
                          <i class="fas fa-trash"></i> Hapus
                        </button>
                      </td>
                    </tr>
                    <% }); %> <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center">
                        Tidak ada detail data keuangan
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
                <a href="/admin/data-keuangan" class="btn btn-secondary mt-3"
                  ><i class="fas fa-arrow-left"></i> Kembali</a
                >
              </div>
            </div>
          </div>
        </div>
      </main>

      <%- include('../../partials/footer') %>
    </div>

    <!-- Modal Konfirmasi -->
    <div
      class="modal fade"
      id="confirmModal"
      tabindex="-1"
      aria-labelledby="confirmModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmModalLabel">Konfirmasi Aksi</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" id="confirmMessage">
            <!-- Pesan Konfirmasi -->
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Batal
            </button>
            <!-- Form Konfirmasi -->
            <form id="confirmForm" method="POST" style="display: inline">
              <button type="submit" class="btn btn-primary">Konfirmasi</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Edit -->
    <% if (detail && detail.length > 0) { %> <% detail.forEach((data) => { %>
    <div
      class="modal fade"
      id="editModal<%= data.id %>"
      tabindex="-1"
      aria-labelledby="editModalLabel<%= data.id %>"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel<%= data.id %>">
              Edit Data Keuangan
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form method="POST" action="/admin/data-keuangan/edit">
            <div class="modal-body">
              <input type="hidden" name="id" value="<%= data.id %>" />
              <div class="mb-3">
                <label for="jenisTransaksi<%= data.id %>" class="form-label"
                  >Jenis Transaksi</label
                >
                <select
                  class="form-select"
                  id="jenisTransaksi<%= data.id %>"
                  name="jenis_transaksi"
                  required
                >
                  <option value="<%= data.jenis_transaksi %>" selected>
                    <%= data.jenis_transaksi %>
                  </option>
                  <% if (data.jenis_transaksi === "Pemasukan") { %>
                  <option value="Pengeluaran">Pengeluaran</option>
                  <% } else { %>
                  <option value="Pemasukan">Pemasukan</option>
                  <% } %>
                </select>
              </div>

              <div class="mb-3">
                <label for="nominal<%= data.id %>" class="form-label"
                  >Nominal</label
                >
                <input
                  type="number"
                  class="form-control"
                  id="nominal<%= data.id %>"
                  name="nominal"
                  value="<%= data.nominal %>"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="keterangan<%= data.id %>" class="form-label"
                  >Keterangan</label
                >
                <textarea
                  class="form-control"
                  id="keterangan<%= data.id %>"
                  name="keterangan"
                  rows="3"
                  required
                >
    <%= data.keterangan %></textarea
                >
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Batal
              </button>
              <button type="submit" class="btn btn-primary">Simpan</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% }); %> <% } %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/assets/js/skrip.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/assets/demo/chart-area-demo.js"></script>
    <script src="/assets/demo/chart-bar-demo.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/assets/js/datatables-simple-demo.js"></script>
    <script>
      // Fungsi untuk mengatur modal konfirmasi
      function setConfirmModal(actionUrl, message) {
        const confirmForm = document.getElementById("confirmForm");
        const confirmMessage = document.getElementById("confirmMessage");

        confirmForm.action = actionUrl; // Set URL action form
        confirmMessage.textContent = message; // Set pesan konfirmasi
      }
    </script>
  </body>
</html>
