<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>HISS TKJ - Admin Panel</title>
    <link href="../../assets/css/gaya.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css"
      rel="stylesheet"
    />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="sb-nav-fixed">
    <%- include('../../partials/navbar') %>
    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid px-4">
          <!-- Header Section -->
          <div class="d-flex justify-content-between align-items-center my-4">
            <h1 class="mt-4">Data Anggota</h1>
          </div>

          <!-- Breadcrumb -->
          <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin">Panel</a></li>
            <li class="breadcrumb-item active">Data Anggota</li>
          </ol>

          <!-- Alert Messages -->
          <% if (message) { %>
          <div
            class="alert alert-info alert-dismissible fade show"
            role="alert"
          >
            <%= message %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>

          <!-- Data Keuangan Card -->
          <div class="card shadow mb-4">
            <div
              class="card-header bg-dark text-white d-flex justify-content-between align-items-center"
            >
              <h5 class="mb-0">
                <i class="fas fa-table me-1"></i> Data Anggota
              </h5>
              <form
                method="GET"
                action="/admin/data-anggota/export-data/"
                class="d-flex"
              >
                <input
                  type="hidden"
                  name="kelas"
                  value="<%= query.kelas || '' %>"
                />
                <input
                  type="hidden"
                  name="divisi"
                  value="<%= query.divisi || '' %>"
                />
                <input
                  type="hidden"
                  name="role"
                  value="<%= query.role || '' %>"
                />
                <button type="submit" class="btn btn-success">
                  <i class="fas fa-file-excel"></i> Export
                </button>
              </form>
            </div>
            <div class="card-body">
                <form method="GET" action="/admin/data-anggota" class="row g-3 align-items-center mb-4">
                    <!-- Filter Kelas -->
                    <div class="col-md-3">
                      <select name="kelas" id="filterKelas" class="form-select">
                        <option value="">Pilih Kelas</option>
                        <% uniqueKelas.forEach(kelas => { %>
                          <option value="<%= kelas %>" <%= kelas === (query.kelas || "") ? "selected" : "" %>><%= kelas %></option>
                        <% }) %>
                      </select>
                    </div>
                  
                    <!-- Filter Divisi -->
                    <div class="col-md-3">
                      <select name="divisi" id="filterDivisi" class="form-select">
                        <option value="">Pilih Divisi</option>
                        <% uniqueDivisi.forEach(divisi => { %>
                          <option value="<%= divisi %>" <%= divisi === (query.divisi || "") ? "selected" : "" %>><%= divisi %></option>
                        <% }) %>
                      </select>
                    </div>
                  
                    <!-- Filter Role -->
                    <div class="col-md-3">
                      <select name="role" id="filterRole" class="form-select">
                        <option value="">Pilih Role</option>
                        <% uniqueRoles.forEach(role => { %>
                          <option value="<%= role %>" <%= role === (query.role || "") ? "selected" : "" %>><%= role %></option>
                        <% }) %>
                      </select>
                    </div>
                  
                    <!-- Button Terapkan Filter -->
                    <div class="col-md-3 d-flex justify-content-start">
                      <button type="submit" class="btn btn-warning w-100">
                        <i class="fas fa-search"></i> Terapkan Filter
                      </button>
                    </div>
                  </form>
                  
              <div class="table-responsive">
                <table
                  id="datatablesSimple"
                  class="table table-bordered table-hover"
                >
                  <thead class="table-dark">
                    <tr>
                      <th>ID</th>
                      <th>Nama</th>
                      <th>Kelas</th>
                      <th>Divisi</th>
                      <th>Role</th>
                      <th>Username</th>
                      <th>Email</th>
                      <th>No. Telpon</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% accounts.forEach(account => { %>
                    <tr>
                      <td><%= account.id %></td>
                      <td><%= account.nama %></td>
                      <td><%= account.kelas %></td>
                      <td><%= account.divisi %></td>
                      <td><%= account.role %></td>
                      <td><%= account.username %></td>
                      <td><%= account.email %></td>
                      <td><%= account.no_telpon %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </main>

      <%- include('../../partials/footer') %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="../../assets/js/skrip.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="../../assets/demo/chart-area-demo.js"></script>
    <script src="../../assets/demo/chart-bar-demo.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="../../assets/js/datatables-simple-demo.js"></script>
    <script>
      function combineTanggalInput() {
        const tanggal = document
          .getElementById("tanggal")
          .value.padStart(2, "0");
        const bulan = document.getElementById("bulan").value;
        const tahun = document.getElementById("tahun").value;

        // Gabungkan menjadi format YYYY-MM-DD
        const combinedTanggal = `${tahun}-${bulan}-${tanggal}`;

        // Set nilai ke input hidden
        document.getElementById("combinedTanggal").value = combinedTanggal;
      }
    </script>
  </body>
</html>
